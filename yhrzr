    <script>
        const explanations = {
            q1: "Правильный ответ: A. Запятая ставится перед 'он', так как это сложносочиненное предложение.",
            q2: "Правильный ответ: B. 'Умен' - правильная форма прилагательного 'умный' в прошедшем времени.",
            q3: "Правильный ответ: A. Ошибок нет, предложение грамматически верное.",
            q4: "Правильный ответ: A. Запятая ставится перед 'волк', так как это сложносочиненное предложение.",
            q5: "Правильный ответ: A. Запятая нужна перед 'как', так как это вводное слово.",
            q1_b: "Правильный ответ: A. Запятая ставится перед 'они', так как это сложносочиненное предложение.",
            q2_b: "Правильный ответ: A. 'Любят' - правильная форма глагола 'любить'.",
            q3_b: "Правильный ответ: A. Ошибок нет, предложение грамматически верное.",
            q4_b: "Правильный ответ: A. Ошибок нет, предложение грамматически верное.",
            q5_b: "Правильный ответ: C. 'Радостными' - правильная форма прилагательного в множественном числе."
        };

        function checkNopogodi() {
            const answers = {
                q1: 'A',
                q2: 'B',
                q3: 'A',
                q4: 'A',
                q5: 'A'
            };

            let score = 0;
            let feedback = "";

            for (const key in answers) {
                const userAnswer = document.querySelector(`input[name="${key}"]:checked`);
                if (userAnswer && userAnswer.value === answers[key]) {
                    score++;
                } else {
                    feedback += `<div class="error">${key}: Неправильный ответ. ${explanations[key]}</div>`;
                }
            }

            document.getElementById('nopogodi-result').innerHTML = `Вы правильно ответили на ${score} из 5 вопросов.<br>${feedback}`;
        }

        function checkBarbos() {
            const answers = {
                q1_b: 'A',
                q2_b: 'A',
                q3_b: 'A',
                q4_b: 'A',
                q5_b: 'C'
            };

            let score = 0;
            let feedback = "";

            for (const key in answers) {
                const userAnswer = document.querySelector(`input[name="${key}"]:checked`);
                if (userAnswer && userAnswer.value === answers[key]) {
                    score++;
                } else {
                    feedback += `<div class="error">${key}: Неправильный ответ. ${explanations[key]}</div>`;
                }
            }

            document.getElementById('barbos-result').innerHTML = `Вы правильно ответили на ${score} из 5 вопросов.<br>${feedback}`;
        }
